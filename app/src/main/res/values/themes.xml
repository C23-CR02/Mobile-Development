<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudRaya" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CloudRaya.HeaderLanding">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">#F57D45</item>
    </style>
    <style name="Theme.CloudRaya.TextCenter">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>
    <style name="Theme.CloudRaya.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>
    <style name="Theme.CloudRaya.PageTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>
    <style name="Theme.CloudRaya.PrimaryButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    <style name="Theme.CloudRaya.SecondaryButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/secondary</item>
    </style>
    <style name="Theme.CloudRaya.ActionButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/color_action_button</item>
    </style>
    <style name = "Theme.CloudRaya.Card">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/editText</item>
    </style>
    <style name="Theme.CloudRaya.InputSiteName">
        <item name="android:hint">Enter Your Site Name Here</item>
        <item name="android:gravity">center_vertical</item>

    </style>
    <style name="Theme.CloudRaya.InputSiteUrl">
        <item name="android:hint">Enter Your Site URL Here</item>

    </style>
    <style name="Theme.CloudRaya.InputAppKey">
        <item name="android:hint">Enter Your App Key Here</item>
        <item name="android:gravity">center_vertical</item>

    </style>
    <style name="Theme.CloudRaya.InputAppSecret">
        <item name="android:hint">Enter Your App Secret Here</item>
        <item name="android:gravity">center_vertical</item>

    </style>
</resources>