<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudRaya" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CloudRaya.HeaderLanding">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>
    <style name="Theme.CloudRaya.TextCenter">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>
    <style name="Theme.CloudRaya.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>
    <style name="Theme.CloudRaya.PageTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>
    <style name="Theme.CloudRaya.PrimaryButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    <style name="Theme.CloudRaya.SecondaryButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/secondary</item>
    </style>
</resources>