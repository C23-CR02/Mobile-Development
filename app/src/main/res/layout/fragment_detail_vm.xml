<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailVM.FragmentDetailVM">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_left"
        android:contentDescription="@string/back" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vm_detail"
        android:layout_marginTop="20dp"
        style="@style/Theme.CloudRaya.PageTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/container"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/name"
                style="@style/Theme.CloudRaya.Text"
                android:textSize="20sp"
                android:fontFamily="@font/inter_medium"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:layout_marginTop="10dp"
                style="@style/Theme.CloudRaya.Text"
                card_view:layout_constraintTop_toBottomOf="@id/tvName"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:drawableStartCompat="@drawable/ic_location"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/tvImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/image"
                android:layout_marginTop="10dp"
                style="@style/Theme.CloudRaya.Text"
                card_view:layout_constraintTop_toBottomOf="@id/tvLocation"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:drawableStartCompat="@drawable/ic_disc"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/tvIPAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ip_address"
                android:layout_marginTop="10dp"
                style="@style/Theme.CloudRaya.Text"
                card_view:layout_constraintTop_toBottomOf="@id/tvImage"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:drawableStartCompat="@drawable/ic_ip_address"
                android:drawablePadding="8dp"/>
            <TextView
                android:id="@+id/textLaunchDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/launch_date"
                android:layout_marginTop="16dp"
                style="@style/Theme.CloudRaya.Text"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/secondary"
                card_view:layout_constraintTop_toBottomOf="@id/tvIPAddress"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:drawablePadding="8dp"/>
            <TextView
                android:id="@+id/tvLaunchDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/launch_date"
                style="@style/Theme.CloudRaya.Text"
                card_view:layout_constraintTop_toBottomOf="@id/textLaunchDate"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:drawablePadding="8dp"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                style="@style/Theme.CloudRaya.Text"
                card_view:layout_constraintTop_toBottomOf="@id/tvLaunchDate"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:drawableStartCompat="@drawable/ic_active"
                android:drawablePadding="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        style="@style/Theme.CloudRaya.ActionButton"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnStop"
        app:iconTint="@null"
        app:icon="@drawable/ic_start"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        style="@style/Theme.CloudRaya.ActionButton"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintStart_toEndOf="@+id/btnStart"
        app:layout_constraintEnd_toStartOf="@id/btnRestart"
        app:iconTint="@null"
        app:icon="@drawable/ic_stop"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        style="@style/Theme.CloudRaya.ActionButton"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintStart_toEndOf="@id/btnStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon="@drawable/ic_restart"
        app:iconTint="@null"/>
</androidx.constraintlayout.widget.ConstraintLayout>