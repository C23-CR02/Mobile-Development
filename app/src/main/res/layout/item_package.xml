<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_package"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_package"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/text_package"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tv_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operating_system"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_package"
            app:layout_constraintTop_toTopOf="@id/iv_package"
            app:layout_constraintBottom_toBottomOf="@id/iv_package"
            />

        <ImageView
            android:id="@+id/iv_memory"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_memory"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/server_os"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_package"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_memory"
            app:layout_constraintTop_toTopOf="@id/iv_memory"
            app:layout_constraintBottom_toBottomOf="@id/iv_memory"
            />

        <ImageView
            android:id="@+id/iv_cpu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_cpu"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/cpu"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_memory"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cost"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_cpu"
            app:layout_constraintTop_toTopOf="@id/iv_cpu"
            app:layout_constraintBottom_toBottomOf="@id/iv_cpu"
            />

        <ImageView
            android:id="@+id/iv_bandwidth"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_bandwidth"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/cpu"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_cpu"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_bandwidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bandwidth"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_bandwidth"
            app:layout_constraintTop_toTopOf="@id/iv_bandwidth"
            app:layout_constraintBottom_toBottomOf="@id/iv_bandwidth"
            />

        <ImageView
            android:id="@+id/iv_disk"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_type_disc"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/hard_disk"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_bandwidth"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_disk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hard_disk"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_disk"
            app:layout_constraintTop_toTopOf="@id/iv_disk"
            app:layout_constraintBottom_toBottomOf="@id/iv_disk"
            />

        <ImageView
            android:id="@+id/iv_hour"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/month_cost"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/hard_disk"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_disk"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cost"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_hour"
            app:layout_constraintTop_toTopOf="@id/iv_hour"
            app:layout_constraintBottom_toBottomOf="@id/iv_hour"
            />

        <ImageView
            android:id="@+id/iv_monthly"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/month_cost"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/hard_disk"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_hour"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_monthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_month"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_monthly"
            app:layout_constraintTop_toTopOf="@id/iv_monthly"
            app:layout_constraintBottom_toBottomOf="@id/iv_monthly"
            />

        <RadioButton
            android:id="@+id/rb_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>